<MainScreen>:
    rows: 5

    TextInput:
        id: display
        text: str(root.cpu.display)
        halign: 'right'
        font_size: 55
        size_hint: (0.8, 0.2)

    BoxLayout:
        id: keys
        size_hint: (0.8, 0.2)
        font_size: 50

        Button:
            id: clear_input
            size_hint: (0.25, 1)
            text: 'C'
            on_press: root.clear_input()
        Button:
            id: reset_calc
            sze_hint: (0.25, 1)
            text: 'AC'
            on_press: root.reset_calc()

    BoxLayout:
        id: ops
        size_hint: (0.8, 0.2)
        Button:
            id: div
            text: '/'
            on_press: root.calculate('/')
            size_hint: (0.25, 1)
        Button:
            id: mul
            text: '*'
            on_press: root.calculate('*')
            size_hint: (0.25, 1)
        Button:
            id: sub
            text: '-'
            on_press: root.calculate('-')
            size_hint: (0.25, 1)
        Button:
            id: add
            text: '+'
            on_press: root.calculate('+')
            size_hint: (0.25, 1)
    GridLayout:
        id: nums
        rows: 4
        Button:
            id: seven
            text: '7'
            on_press: root.press('7')
            size_hint: (0.33, 0.25)
        Button:
            id: eight
            text: '8'
            on_press: root.press('8')
            size_hint: (0.33, 0.25)
        Button:
            id: nine
            text: '9'
            on_press: root.press('9')
            size_hint: (0.33, 0.25)
        Button:
            id: four
            text: '4'
            on_press: root.press('4')
            size_hint: (0.33, 0.25)
        Button:
            id: five
            text: '5'
            on_press: root.press('5')
            size_hint: (0.33, 0.25)
        Button:
            id: six
            text: '6'
            on_press: root.press('6')
            size_hint: (0.33, 0.25)
        Button:
            id: one
            text: '1'
            on_press: root.press('1')
            size_hint: (0.33, 0.25)
        Button:
            id: two
            text: '2'
            on_press: root.press('2')
            size_hint: (0.33, 0.25)
        Button:
            id: three
            text: '3'
            on_press: root.press('3')
            size_hint: (0.33, 0.25)
        Button:
            id: empty
            text: ''
            size_hint: (0.33, 0.25)
        Button:
            id: zero
            text: '0'
            on_press: root.press('0')
            size_hint: (0.33, 0.25)
        Button:
            id: dot
            text: '.'
            on_press: root.press('.')
            size_hint: (0.33, 0.25)

    Button:
        id: equals
        size_hint: (0.8, 0.2)
        text: '='
        on_press: root.calculate('=')